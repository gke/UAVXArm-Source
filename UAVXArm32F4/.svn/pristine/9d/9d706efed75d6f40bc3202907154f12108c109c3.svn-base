void StartBaro(boolean ReadPressure) {
	uint8 d = 0;

	if (ReadPressure)
		sioWriteBlock(SIOBaro, MS56XX_ID, 0x48, 0, &d); // OSR 4096 @ 10mS or 100Hz
	else
		sioWriteBlock(SIOBaro, MS56XX_ID, 0x58, 0, &d);

} // StartBaro

